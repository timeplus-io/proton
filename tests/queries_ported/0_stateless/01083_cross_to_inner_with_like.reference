SELECT
  n.k, r.k, r.name
FROM
 n
ALL INNER JOIN r ON n.k = r.k
WHERE
  (n.k = r.k) AND (r.name = \'A\')
SELECT
  n.k, r.k, r.name
FROM
 n
ALL INNER JOIN r ON n.k = r.k
WHERE
  (n.k = r.k) AND (r.name LIKE \'A%\')
SELECT
  n.k, r.k, r.name
FROM
 n
ALL INNER JOIN r ON n.k = r.k
WHERE
  (n.k = r.k) AND (r.name NOT LIKE \'A%\')
